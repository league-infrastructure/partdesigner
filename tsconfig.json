{
    "compilerOptions": {
        "target": "ES2021",
        "module": "system",
        "outFile": "app.js",
        "sourceMap": true,
        "moduleResolution": "node",
        "lib": ["DOM", "DOM.Iterable", "ES2021"],
        "skipLibCheck": true,
        "noEmitOnError": false
    },
    "compileOnSave": true,
    "include": [
        "app.ts",
        "src/**/*.ts"
    ]
}